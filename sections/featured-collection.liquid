{%- liquid
  assign collection = section.settings.collection
  assign products_to_show = section.settings.products_to_show | default: 4
-%}

<section class="featured-collection section-padding" id="section-{{ section.id }}">
  <div class="page-width">

    <div class="featured-collection__header">
      <div>
        {%- if section.settings.subtext != blank -%}
          <p class="featured-collection__eyebrow" style="font-size:1.3rem;text-transform:uppercase;letter-spacing:.1em;color:rgba(var(--color-base-text),.5);margin-bottom:.4rem;">
            {{ section.settings.subtext }}
          </p>
        {%- endif -%}
        {%- if section.settings.heading != blank -%}
          <h2 class="featured-collection__title" style="margin:0;">{{ section.settings.heading }}</h2>
        {%- endif -%}
      </div>

      {%- if section.settings.view_all_label != blank and collection != blank -%}
        <a href="{{ collection.url }}" class="btn btn--secondary">
          {{ section.settings.view_all_label }}
        </a>
      {%- endif -%}
    </div>

    {%- if collection != blank -%}
      {%- if collection.products_count > 0 -%}
        <div class="product-grid">
          {%- for product in collection.products limit: products_to_show -%}
            {% render 'product-card', product: product %}
          {%- endfor -%}
        </div>
      {%- else -%}
        <p style="color:rgba(var(--color-base-text),.5);text-align:center;padding:4rem 0;">No products in this collection.</p>
      {%- endif -%}
    {%- else -%}
      {%- comment -%} Placeholder cards in the editor {%- endcomment -%}
      <div class="product-grid">
        {%- for i in (1..4) -%}
          <div class="product-card">
            <div class="product-card__media" style="background:rgb(var(--color-base-background-2));">
              {{ 'product-' | append: i | placeholder_svg_tag: 'placeholder-svg' }}
            </div>
            <div class="product-card__info">
              <div class="product-card__title">Sample Product {{ i }}</div>
              <div class="product-card__price"><span class="price">$29.99</span></div>
            </div>
          </div>
        {%- endfor -%}
      </div>
    {%- endif -%}

  </div>
</section>

{% schema %}
{
  "name": "Featured collection",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "subtext",
      "label": "Eyebrow / subtext",
      "default": "Best Sellers"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Top Rated Formulas"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 4,
      "label": "Products to show"
    },
    {
      "type": "text",
      "id": "view_all_label",
      "label": "\"View all\" button label",
      "default": "View All"
    }
  ],
  "presets": [
    {
      "name": "Featured collection",
      "settings": {
        "heading": "Top Rated Formulas",
        "subtext": "Best Sellers",
        "view_all_label": "View All"
      }
    }
  ]
}
{% endschema %}
