<div class="hero-banner hero-banner--align-{{ section.settings.text_alignment }}{% unless section.settings.image %} hero-banner--no-image{% endunless %}"
     style="min-height: {{ section.settings.section_height }}vh;">

  {%- if section.settings.image != blank -%}
    <div class="hero-banner__media">
      <img
        src="{{ section.settings.image | image_url: width: 1920 }}"
        srcset="
          {{ section.settings.image | image_url: width: 600 }} 600w,
          {{ section.settings.image | image_url: width: 900 }} 900w,
          {{ section.settings.image | image_url: width: 1200 }} 1200w,
          {{ section.settings.image | image_url: width: 1920 }} 1920w"
        sizes="100vw"
        alt="{{ section.settings.image.alt | escape | default: section.settings.heading }}"
        loading="eager"
        fetchpriority="high"
        width="{{ section.settings.image.width }}"
        height="{{ section.settings.image.height }}"
      >
    </div>
    {%- if section.settings.show_overlay -%}
      <div class="hero-banner__overlay" style="background: linear-gradient(to right, rgba(0,0,0,{{ section.settings.overlay_opacity | divided_by: 100.0 }}) 0%, rgba(0,0,0,{{ section.settings.overlay_opacity | divided_by: 200.0 }}) 100%);"></div>
    {%- endif -%}
  {%- endif -%}

  <div class="hero-banner__content">
    <div class="page-width">
      <div class="hero-banner__inner">

        {%- if section.settings.eyebrow != blank -%}
          <p class="hero-banner__eyebrow">{{ section.settings.eyebrow }}</p>
        {%- endif -%}

        {%- if section.settings.heading != blank -%}
          <h1 class="hero-banner__heading">{{ section.settings.heading }}</h1>
        {%- endif -%}

        {%- if section.settings.subtext != blank -%}
          <p class="hero-banner__subtext">{{ section.settings.subtext }}</p>
        {%- endif -%}

        {%- if section.settings.button_label != blank or section.settings.button_label_2 != blank -%}
          <div class="hero-banner__buttons">
            {%- if section.settings.button_label != blank -%}
              <a href="{{ section.settings.button_link | default: '#' }}"
                 class="btn btn--primary">
                {{ section.settings.button_label }}
              </a>
            {%- endif -%}
            {%- if section.settings.button_label_2 != blank -%}
              <a href="{{ section.settings.button_link_2 | default: '#' }}"
                 class="btn btn--secondary">
                {{ section.settings.button_label_2 }}
              </a>
            {%- endif -%}
          </div>
        {%- endif -%}

      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Hero banner",
  "tag": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background image"
    },
    {
      "type": "range",
      "id": "section_height",
      "min": 30,
      "max": 100,
      "step": 5,
      "default": 65,
      "unit": "vh",
      "label": "Section height"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        { "value": "left",   "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right",  "label": "Right" }
      ],
      "default": "left"
    },
    {
      "type": "checkbox",
      "id": "show_overlay",
      "label": "Show image overlay",
      "default": true
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 80,
      "step": 5,
      "default": 45,
      "unit": "%",
      "label": "Overlay opacity"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow text",
      "default": "New Collection"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Feed Your Family Better"
    },
    {
      "type": "textarea",
      "id": "subtext",
      "label": "Subtext",
      "default": "Premium organic baby formulas crafted with the finest ingredients for your little one's first years."
    },
    {
      "type": "header",
      "content": "Buttons"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Primary button label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Primary button link"
    },
    {
      "type": "text",
      "id": "button_label_2",
      "label": "Secondary button label"
    },
    {
      "type": "url",
      "id": "button_link_2",
      "label": "Secondary button link"
    }
  ],
  "presets": [
    {
      "name": "Hero banner",
      "settings": {
        "heading": "Feed Your Family Better",
        "eyebrow": "New Collection",
        "subtext": "Premium organic baby formulas crafted with the finest ingredients.",
        "button_label": "Shop Now",
        "button_label_2": "Build Your Bundle"
      }
    }
  ]
}
{% endschema %}
